# MAINTAINED BY PUPPET

## [SIZE LIMITS]
client_body_buffer_size     <%= nginx_client_body_buffer_size %>; 128K;
client_header_buffer_size   <%= nginx_client_header_buffer_size %>;1M;
client_max_body_size        <%= nginx_client_max_body_size %>;1M;
large_client_header_buffers <%= nginx_large_client_header_buffers %>;8 8k;

## [TIMEOUTS]
client_body_timeout   		<%= nginx_client_body_timeout %>;60;
client_header_timeout 		<%= nginx_client_header_timeout %>;60;
expires               		<%= nginx_expires %>;24h;
keepalive_timeout     		<%= nginx_keepalive_timeout %>;60 60;
send_timeout          		<%= nginx_send_timeout %>;60;
 
## [GENERAL OPTIONS]
ignore_invalid_headers   	<%= nginx_ignore_invalid_headers %>;on;
keepalive_requests      	<%= nginx_keepalive_requests %>;100;
limit_zone gulag $binary_remote_addr 	<%= nginx_limit_zone %>;5m;
recursive_error_pages    	<%= nginx_recursive_error_pages %>;on;
sendfile                 	<%= nginx_sendfile %>;on;
server_name_in_redirect 	<%= nginx_server_name_in_redirect %>;off;
server_tokens           	<%= nginx_server_tokens %>;off;
 
## [TCP OPTIONS]
tcp_nodelay 	<%= nginx_tcp_nodelay %>;on;
tcp_nopush  	<%= nginx_tcp_nopush %>;on;
 
## [COMPRESSION]
gzip            <%= nginx_gzip %>; on;
gzip_buffers    <%= nginx_gzip_buffers %>;  16 8k;
gzip_comp_level <%= nginx_gzip_comp_level %>;  6;
gzip_http_version 	<%= nginx_gzip_http_version %>;1.0;
gzip_min_length <%= nginx_gzip_min_length %>;  0;
gzip_types      <%= nginx_gzip_types %>;  text/plain text/css image/x-icon application/x-perl application/x-httpd-cgi;
gzip_vary       <%= nginx_gzip_vary %>;  on;
 
## [LOG FORMATS]
log_format  main  '$remote_addr $host $remote_user [$time_local] "$request" '
      '$status $body_bytes_sent "$http_referer" "$http_user_agent"' '"$gzip_ratio"';
